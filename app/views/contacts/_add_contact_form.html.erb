<h1>Add New Contact</h1>
<%= form_for [@company] do |f| %>
<ul>
  <% @article.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
</ul>
  <p>
    <%= f.label "Full Name:" %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label "Position:" %><br />
    <%= f.text_area :position %>
  </p>
  <p>
    <%= f.label "Email:" %><br />
    <%= f.text_area :email %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
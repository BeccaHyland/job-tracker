<%= form_for [@company, @job] do |f| %>

  <%= f.label :category_id %>
  <%= f.select :category_id do %>
    <% @categories.each do |category| %>
      <%= content_tag(:option, category.title, value: category.id) %>
    <% end %>
  <% end %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.submit %>
<% end %>

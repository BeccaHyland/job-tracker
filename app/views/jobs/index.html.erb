<% if @company %>
  <h1>Jobs at <strong><%= @company.name %></strong></h1>
<% else %>
  <h1>All Jobs</h1>
<% end %></strong></h1>

<%= link_to "Add a New Job", new_job_path %>

<div class="headers">
  <h2>Title</h2>
  <h2>Company</h2>
  <h2>City</h2>
  <h2>Interest</h2>
</div>

<% if @company %>
<ul>
<% @jobs.each do |job| %>
  <li class=job_<%= job.id %>>
    <%= link_to job.title, company_job_path(@company, job) %>
    <%= link_to job.company.name, company_path(@company) %>
    <%= link_to "#{job.city}", job_path(location: job.city) %>
    <%= link_to "#{job.level_of_interest}", job_path(level_of_interest: job.level_of_interest) %>
    <%= link_to "Edit", edit_company_job_path(@company, job) %>
    <%= link_to "Delete", company_job_path(@company, job), method: "delete" %>
  </li>
<% end %>
</ul>

<% else %>
<ul>
<% @jobs.each do |job| %>
  <li class=job_<%= job.id %>>
    <%= link_to job.title, job_path(job) %>
    <%= link_to job.company.name, company_path(job.company) %>
    <%= link_to "#{job.city}", job_path(location: job.city) %>
    <%= link_to "#{job.level_of_interest}", job_path(level_of_interest: job.level_of_interest) %>
    <%= link_to "Edit", edit_job_path(job) %>
    <%= link_to "Delete", job_path(job), method: "delete" %>
  </li>
<% end %>
</ul>
<% end %>

